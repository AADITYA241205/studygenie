# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.db binary
*.sqlite3 binary
*.pyc binary
*.pyo binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.pdf binary
*.ico binary
